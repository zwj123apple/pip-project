# Flask 环境配置示例
# 复制此文件为 .env 并根据实际情况修改

# 应用环境 (development/production/testing)
FLASK_ENV=development

# 调试模式
FLASK_DEBUG=True

# 服务器配置
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 数据库配置
DATABASE_URL=sqlite:///./loan_system.db

# JWT 配置
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 文件上传配置
# 支持绝对路径或相对路径
# Windows绝对路径示例: C:/uploads/loan_docs 或 D:/data/uploads
# Linux绝对路径示例: /var/uploads/loan_docs 或 /home/user/uploads
# 相对路径示例: uploads/loan_docs (相对于项目根目录)
UPLOAD_FOLDER=uploads/loan_docs
